{
    "manifest_version": 3,
    "name": "Distraction Blocker",
    "version": "1.0",
    "description": "Block distraction sites and stay focused",
    "permissions": ["storage", "tabs", "alarms"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "assets/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "host_permissions": [
        "*://*/*",
        "https://zenquotes.io/*",
        "https://api.quotable.io/*",
        "https://programming-quotes-api.herokuapp.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/bootstrap/css/bootstrap.min.css",
                "assets/bootstrap/js/bootstrap.bundle.min.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://zenquotes.io https://api.quotable.io https://programming-quotes-api.herokuapp.com"
    }
}
