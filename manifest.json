{
    "manifest_version": 3,
    "name": "Distraction Blocker",
    "version": "1.0",
    "description": "Block distraction sites and stay focused",
    "permissions": ["storage", "tabs", "alarms"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "assets/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"],
            "css": ["styles.css", "assets/bootstrap.min.css"]
        }
    ],
    "host_permissions": [
        "*://*/*",
        "https://zenquotes.io/*",
        "https://api.quotable.io/*",
        "https://programming-quotes-api.herokuapp.com/*"
    ]
}